<h1>Notes</h1>

<table>
  <tr>
    <th>内容</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>

    <td><%= link_to '詳細を確認する',post_path(post.id) %></td>
    <td><%= link_to "Noteを編集する", edit_post_path(post.id), data: {confirm: '本当に編集してもいいですか？'} %></td>
    <td><%= link_to "Noteを削除する", post_path(post.id), method: :delete, data: {confirm: '本当に削除してもいいですか？'} %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to '新しくNoteを投稿する',new_post_path %>